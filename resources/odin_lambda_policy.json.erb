{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Resource": "arn:aws:iam::*:role/<%= assumed_role_name %>",
      "Action": "sts:AssumeRole"
    },
    {
      "Effect": "Allow",
      "Action": "pricing:GetProducts",
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject*",
        "s3:PutObject*",
        "s3:DeleteObject*",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::<%= s3_bucket_name %>/*",
        "arn:aws:s3:::<%= s3_bucket_name %>"
      ]
    },
    {
      "Effect": "Deny",
      "Action": [
        "s3:*"
      ],
      "NotResource": [
        "arn:aws:s3:::<%= s3_bucket_name %>/*",
        "arn:aws:s3:::<%= s3_bucket_name %>"
      ]
    }
  ]
}
